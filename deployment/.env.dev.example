# Development Environment Configuration Example
# Copy this file to .env.dev and update with your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
DEBUG=true

# Gemini API (add your key here)
GEMINI_API_KEY=your-gemini-api-key-here

# File Upload Settings
MAX_CONTENT_LENGTH=104857600  # 100MB
UPLOAD_FOLDER=/app/uploads
OUTPUT_FOLDER=/app/outputs

# CORS Settings
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=100/hour

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/dev.log

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/gemini_dev

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090